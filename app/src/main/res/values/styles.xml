<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="bt_login" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="drawableTint">@color/white</item>
    </style>
    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/authentication_background</item>
    </style>
    <style name="bottomNav" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/white</item>
        <item name="colorOnPrimary">@color/menus</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>
</resources>